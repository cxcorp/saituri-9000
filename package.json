{
  "name": "saituri-9000",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@3.5.1",
  "type": "module",
  "devDependencies": {
    "@swc-node/register": "^1.6.5",
    "@swc/core": "^1.3.59",
    "@types/lodash": "^4.14.194",
    "@types/luxon": "^3.3.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "nodemon": "^2.0.22",
    "parcel": "^2.8.3",
    "prisma": "^4.14.1",
    "process": "^0.11.10",
    "rome": "^12.1.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "4.14.1",
    "@reduxjs/toolkit": "^1.9.5",
    "@tabler/icons-react": "^2.20.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "fp-ts": "^2.15.0",
    "io-ts": "^2.2.20",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.2",
    "styled-components": "^6.0.0-rc.1",
    "typera-express": "^2.4.4"
  },
  "scripts": {
    "backend:start": "nodemon --watch src/backend -e ts --exec 'node --loader @swc-node/register/esm src/backend/server.ts'",
    "backend:build": "NODE_ENV=production tsc",
    "backend:start-prod": "NODE_ENV=production node build/backend/server.js",
    "frontend:start": "PORT=1234 parcel src/frontend/index.html --dist-dir dist-dev",
    "frontend:build": "NODE_ENV=production parcel build --public-url /assets src/frontend/index.html",
    "build": "yarn backend:build && yarn frontend:build",
    "clean": "rm -rf build dist-dev dist .parcel-cache",
    "infra:up": "docker-compose -f db-compose.yaml up -d",
    "infra:down": "docker-compose -f db-compose.yaml down",
    "db:generate-client": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate-prod": "prisma migrate deploy",
    "tsc:check": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "lint:check": "rome check src"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  }
}
