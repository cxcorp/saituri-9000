{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2021"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "sourceMap":true
  },
  "include": ["src/**/*"]
}